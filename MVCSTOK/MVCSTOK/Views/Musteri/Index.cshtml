@using MVCSTOK.Models.Entity
@model List<TBLMUSTERİLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı:@Html.TextBox("p")
                    <input type="submit" value="Ara" />

                 


                </p>
            }




<table class="table table-bordered">


    <tr>

        <th>MUSTERİ ID</th>
        <th>MUSTERİ ADI</th>
        <th>MUSTERİ SOYADI </th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>

    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MusteriId</td>
                <td>@mus.MusteriAd</td>
                <td>@mus.MusteriSoyad</td>
                <td><a href="/Musteri/SIL/@mus.MusteriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@mus.MusteriId" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİLL", "SIL", new {id= mus.MusteriId }, new { @class = "btn btn-warning",onclick="return confirm ('Gerçkete Sİlmek İstiyor Musunuz?')" })</td>

            </tr>
        }

    </tbody>

</table>

