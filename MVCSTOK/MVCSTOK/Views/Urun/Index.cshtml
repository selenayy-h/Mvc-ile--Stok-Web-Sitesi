


@using MVCSTOK.Models.Entity
@model List<TBLURUNLER>




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<table class="table table-bordered">
    <tr>

        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKASI</th>
        <th>ÜRÜN KATEGORİ</th>
        <th>ÜRÜN FİYAT </th>
        <th>KALAN STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.UrunId</td>
                <td>@urn.UrunAd</td>
                <td>@urn.Marka</td>
                <td>
                    @if (urn.TBLKATEGORİLER != null)
                    {
                        @urn.TBLKATEGORİLER.KategoriAd
                    }
                    else
                    {
                        @:Kategori Yok
                    }
                </td>

                <!-- bunu böyle yapmasaydık önceki gibi ürünkategori bıraksaydık sadece kategori kısmın
         kategori idyi görürdük ama böyle yapınca artık kategorilerin adlarını görüyruz-->
                <td>@urn.Fiyat</td>
                <td>@urn.Stok</td>
                <td><a href="/URUN/SIL/@urn.UrunId" class="btn btn-danger">SİL</a></td>
                <td><a href="/URUN/UrunGetir/@urn.UrunId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }

    </tbody>

</table>
<a href="/URUN/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

